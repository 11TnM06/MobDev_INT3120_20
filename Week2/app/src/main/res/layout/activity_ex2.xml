<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="15dp"
    android:layout_marginTop="15dp">
    <TextView
        android:id="@+id/szHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Welcome Homer"
        android:textStyle="bold"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/szContentText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Please give Generously"
        android:layout_below="@+id/szHeaderText"/>
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/szContentText1">

        <RadioButton
            android:id="@+id/radioButtonOption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paypal" />

        <RadioButton
            android:id="@+id/radioButtonOption2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Direct" />

    </RadioGroup>

    <!-- Set numberPicker min max from 1 to 100 -->
    <NumberPicker
        android:id="@+id/numberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/szContentText1"
        android:layout_alignParentEnd="true"
        android:value="1" />
    <ProgressBar
        android:id="@+id/progressBarHorizontal"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="false"

        android:max="100"
        android:minHeight="50dp"
        android:minWidth="200dp"
        android:progress="1"
        android:progressBackgroundTint="@android:color/darker_gray"
        android:progressTint="@color/black"
        android:layout_below="@+id/numberPicker"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnReturnMain" />
</RelativeLayout>