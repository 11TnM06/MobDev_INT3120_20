<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise 1"
            android:layout_gravity="center"
            android:id="@+id/btnEx1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise 2"
            android:layout_gravity="center"
            android:id="@+id/btnEx2"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise 3"
            android:layout_gravity="center"
            android:id="@+id/btnLinear1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise 4"
            android:layout_gravity="center"
            android:id="@+id/btnLinear2"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise 5"
            android:layout_gravity="center"
            android:id="@+id/btnRelative1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise 6"
            android:layout_gravity="center"
            android:id="@+id/btnRelative2"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise 7"
            android:layout_gravity="center"
            android:id="@+id/btnAbsolute"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise 8"
            android:layout_gravity="center"
            android:id="@+id/btnTable"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise 9"
            android:layout_gravity="center"
            android:id="@+id/btnConstraint"/>
    </LinearLayout>
</FrameLayout>